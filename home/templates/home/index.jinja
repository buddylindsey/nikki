{% extends "base.jinja" %}

{% block content %}
<div id="note-content">
    <div class="row">
        <div class="col-md-4 col-sm-6">
            <form id="add-note" method="post" role="form">
                  {% csrf_token %}
                  <div class="form-fields">
                      <input type="hidden" name="user" value="1" id="user" />
                      <div class="form-group">
                          <input type="text" name="title" class="form-control" placeholder="Title" id="title" />
                      </div>
                      <div class="form-group">
                          <input type="text" name="scripture" class="form-control" placeholder="Scripture" id="scripture" />
                      </div>
                      <div class="form-group">
                          <textarea name="body" id="body" class="form-control"></textarea>
                      </div>
                  </div>
                  <input type="submit" class="form-control" value="add note" id="add">
            </form>
        </div>
    </div>
    <div class="row" id="notes">
    </div>
</div>
{% endblock %}

{% block js_templates %}
<script type="text/template" id="note-view">
<div class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="delete pull-right">x</span>
            <h4><%= title %></h4>
        </div>
        <div class="panel-body">
          <p>
            <%= scripture %>
          </p>
          <hr />
          <%= body %>
        </div>
    </div>
</div>
</script>
{% endblock %}
